{{> message}}
<form action="/todos/{{todo.id}}?_method=PUT" method="POST">
  <input type="checkbox" name="isComplete" value="completed" {{#if todo.isComplete}} checked{{/if}}> <!--此為checkbox圖示，預設可編輯-->
  <input type="text" placeholder='please input name' name="name" value="{{todo.name}}">
  <button type="submit">Save</button>
  <a href="/todos">back</a>
</form>